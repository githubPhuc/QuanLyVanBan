    <br />
    <br />
    <div class="row" style=" width:100%">
        <table id="TableSS" class="table-bordered " style="border:none" width="100%">
            <thead style="border:none">
                <tr style="border:none">
                    <th colspan="2" style="text-align: center; border: none">Tp Hồ Chí Minh, Ngày:@DateTime.UtcNow.AddHours(7).ToString("dd-MM-yyyy")</th>
                    <th colspan="2" style="text-align: center; border: none">Tp Hồ Chí Minh, Ngày:@data.DateTime.ToString("dd-MM-yyyy")</th>
                </tr>
                <tr style="border:none">
