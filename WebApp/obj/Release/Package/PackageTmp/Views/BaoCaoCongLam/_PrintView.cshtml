<script>
    // Tạo một đối tượng Date để lấy thông tin ngày tháng năm hiện tại
    var currentDate = new Date();

    // Lấy ngày, tháng và năm từ đối tượng Date
    var day = currentDate.getDate();
    var month = currentDate.getMonth() + 1; // Tháng bắt đầu từ 0 nên cần cộng thêm 1
    var year = currentDate.getFullYear();

    // Tạo một chuỗi chứa thông tin ngày tháng năm
    var dateText = day + 'tháng' + month + 'năm' + year;

    // Đưa chuỗi vào thẻ div
    document.getElementById('date').innerHTML = dateText;
</script>