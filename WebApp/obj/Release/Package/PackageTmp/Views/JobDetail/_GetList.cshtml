                </a>
                <a onclick="Delete('@item.Id')" class="btn">
                    <i class="far fa-trash-alt"></i> Xoá
                </a>
                @*@if (dataUser.IsManager == true)
            {
                <a onclick="LockUser('@item.Id')" class="btn">
                    <i class="fa-solid fa-lock"></i> Khoá
                </a>
            }*@
    
            </td>
            @{ string name_Location = db_.Jobs.Where(a => a.Id == item.idjob).FirstOrDefault().NameLocation; }
            <td>@name_Location</td>
            <td>@item.job_Detail_Name</td>
            <td>@item.JobDescription</td>
            <td>@item.TimeIn</td>
            <td>@item.TimeOut</td>
            <td>@item.UserCreate</td>

        
        </tr>
        }
    </tbody>
</table>
