
@{
    var data = ViewBag.model as ToolsApp.EntityFramework.JobDetail;
    var list = ViewBag.list as List<ToolsApp.EntityFramework.Job>;
}
<input style="display:none" value="@data.Id" name="Id" id="Id" />
<div class="row" style="margin-bottom:5px">
    <div class="col-md-12 col-sm-4">
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Chọn vị trí làm việc</label>
            <div class="col-md-12 col-sm-12 ten">
                <select id="idjobEdit" name="idjobEdit" class="form-control chosen-select" style="width: 100%;">
                    @foreach (var item in list)
                    {
                    <option value="@item.Id"> @item.NameLocation</option>
                    }
                </select>
            </div>

        </div>


        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Mô tả công việc</label>
            <div class="col-md-12 col-sm-12 ten">
                <input value="@data.job_Detail_Name" class="form-control" placeholder="Ví dụ như trực sảnh, trực nhà xe, bảo vệ..." type="text" id="job_Detail_NameEdit" name="job_Detail_NameEdit" />
            </div>
        </div>
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Chi tiết</label>
            <div class="col-md-12 col-sm-12 ten">
                <input value="@data.JobDescription" class="form-control" placeholder="Các công việc sẽ làm..." type="text" id="JobDescriptionEdit" name="JobDescriptionEdit" />
            </div>

        </div>
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Thời gian vào</label>
            <div class="col-md-12 col-sm-12 ten">
                <input value="@data.TimeIn" class="form-control" type="time" id="TimeInEdit" name="TimeInEdit" />
            </div>

        </div>
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Thời gian ra</label>
            <div class="col-md-12 col-sm-12 ten">
                <input value="@data.TimeOut" class="form-control" type="time" id="TimeOutEdit" name="TimeOutEdit" />
            </div>

        </div>



    </div>


</div>
<script type="text/javascript">

    var config = {
        '.chosen-select': {},
        '.chosen-select-deselect': { allow_single_deselect: true },
        '.chosen-select-no-single': { disable_search_threshold: 10 },
        '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
        '.chosen-select-width': { width: "125%" },
        'search_contains': true
    }
    for (var selector in config) {
        $(selector).chosen(config);
    }




</script>


