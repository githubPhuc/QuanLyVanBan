                 notify("Vui lòng nhập vị trí X");
             } else if (formData.Location_Y === "") {
                 notify("Vui lòng nhập vị trí Y");
             } else if (formData.administrativeArea === "") {
                 notify("Vui lòng chọn thành phố");
             } else if (formData.country === "") {
