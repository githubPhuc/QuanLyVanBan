        function ChangePassword(Id) {
            loadModal("CẬP NHẬT MẬT KHẨU", '@Url.Action("ChangePassword")', modalPassword, Id)
        }
        function SaveNewPassword() {
            formData = {
                Username: $('#Username').val().trim(),
                newPass: $('#newPass').val().trim()
            }
            if (formData.newPass.length< 6) {
                notify("Mật khẩu phải từ 6 ký tự trở lên!");
            }
            else {
                Action('@Url.Action("SaveNewPassword")', 'POST', formData, paramsLoadData);
                modalPassword.$modal.modal('hide')
            }
        }
        function LockUser(id) {
            var formData = {
                Id : id
            }
            if (confirm('Bạn có chắc muốn khoá người dùng này không ?')) {
                Action('@Url.Action("_Lock_User")', 'POST', formData, paramsLoadData)
            }
    }
    </script>
}