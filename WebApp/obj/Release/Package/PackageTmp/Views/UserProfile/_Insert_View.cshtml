
@{
    var list = ViewBag.list as List<ToolsApp.EntityFramework.Department>;

}
<div class="row" style="margin-bottom:5px">
    <div class="col-md-12 col-sm-4">
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Tên tài khoản</label>
            <div class="col-md-12 col-sm-12 ten">
                <input oninput="this.value = this.value.toUpperCase().trim()" value="" class="form-control" type="text" id="username" name="username" />
            </div>
        </div>


        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Mật khẩu:</label>
            <div class="col-md-12 col-sm-12 ten">
                <input value="" class="form-control" type="text" id="password" name="password" />
            </div>
        </div>
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Tên đầy đủ</label>
            <div class="col-md-12 col-sm-12 ten">
                <input value="" class="form-control" type="text" id="fullName" name="fullName" />
            </div>
        </div>
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Email</label>
            <div class="col-md-12 col-sm-12 ten">
                <input oninput="this.value = this.value.trim()" value="" class="form-control" type="text" id="email" name="email" />
            </div>
        </div>

        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Số điện thoại</label>
            <div class="col-md-12 col-sm-12 ten">
                <input oninput="this.value = this.value(.trim()" value="" class="form-control" type="text" id="phone" name="phone" />
            </div>
        </div>

        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Phân loại tài khoản</label>
            <div class="col-md-12 col-sm-12 ten">
                <input id="accoutType" name="accoutType" class="form-control" type="text" value="Admin" readonly />
            </div>
        </div>

        <div class="row" style="margin-bottom:20px">
            <label class="col-md-12 col-sm-12">Công ty</label>
            <div class="col-md-12 col-sm-12 ten">
                <select id="idDepartment" name="idDepartment" class="form-control chosen-select" style="width: 100%;">
                    @foreach (var item in list)
                    {
                    <option value="@item.Id"> @item.Name</option>
                    }
                </select>
            </div>

        </div>
        <div class="row" style="margin-bottom:5px">
            <div class="col-md-12 col-sm-12 ten">
                <label for="isManager" style="color:red">Quản lý </label>
                <input type="checkbox" class="col-md-1 form-check-input one_checkbox" value="true" id="isManager">
            </div>
        </div>

    </div>


</div>
<script type="text/javascript">

    var config = {
        '.chosen-select': {},
        '.chosen-select-deselect': { allow_single_deselect: true },
        '.chosen-select-no-single': { disable_search_threshold: 10 },
        '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
        '.chosen-select-width': { width: "125%" },
        'search_contains': true
    }
    for (var selector in config) {
        $(selector).chosen(config);
    }
</script>
