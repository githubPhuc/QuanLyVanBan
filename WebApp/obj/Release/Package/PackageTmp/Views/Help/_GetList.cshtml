@using ToolsApp.EntityFramework;
@{
   var data = ViewBag.data as List<ToolsApp.EntityFramework.Sp_GetListHelps_Result>;
   ChamCong_teamdevEntities db_ = new ChamCong_teamdevEntities();
}


<table id="myTable" class="table table-bordered table-striped">
    <thead>
        <tr>

            <th></th>
            <th>Id</th>
            <th>Nội dung </th>
            <th>Thời gian</th>
            <th>Tên nhân viên</th>
            <th>Mã nhân viên</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in data)
        {
            var fullName = db_.AspNetUsers.FirstOrDefault(a => a.UserName == item.Username).Fullname;
            <tr>
                <td width="133px">
                        <a style="color:red" onclick="checkImage('@item.Id')" class="btn">
                            <i class="fa-solid fa-triangle-exclamation"></i> Kiểm tra lỗi
                        </a>
                </td>
                <td>@item.Id</td>
                <td>@item.Mess</td>
                <td>@item.time</td>
                <td>@fullName</td>
                <td>@item.Username</td>
                <td>
                    <a  onclick="Delete('@item.Id')" class="btn">
                        <i class="fa-solid fa-trash-alt"></i> Xóa 
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
