

@{
    var blog = ViewBag.blog as ToolsApp.EntityFramework.Blog;
    var objectName = ViewBag.objectName as string;
    var username = ViewData["username"];
    var token = ViewData["token"];
}
<style>
    #btn-close {
        float:right;
        border-radius:6px;
        padding:4px
    }
</style>
<input value="@username" style="display:none" id="username" name="username" />
<input value="@token" style="display:none" id="token" name="token" />
<input value="@objectName" style="display:none" id="objectName" name="objectName" />
<section class="content" id="UpdateBlog">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <b>Cập nhật tin tức</b>
                        </h3>
                            
                        <a href="#" id="btn-close">
                            <img src="~/Content/images/closeIcon.png" width="30" height="30"/>
                        </a>

                    </div>
                    <div class="card-body pad">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Tiêu đề tin tức</label>
                                    <input class="form-control form-control-md" maxlength="50" value="@blog.Title" placeholder="Nhập tiêu đề" type="text" autocomplete="off"
                                           id="title" name="title" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    <textarea maxlength="500" class="form-control form-control-md" rows="5" id="description" name="description">@blog.Description</textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Url trang tin tức </label>
                                    <input class="form-control form-control-md" placeholder="https://examples.com" value="@blog.Url" type="text" autocomplete="off" id="url" name="url" />
                                </div>

                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="formFile" class="form-label">Hình ảnh hiển thị</label>
                                    <input class="form-control" type="file" id="formFile" style="font-size:inherit;height:inherit">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pad">
                            <div class="row">
                                <div class="col-md-6 d-flex justify-content-start">
                                    <button id="btnPush" onclick="updateBlogAction(@blog.Id)" type="button" class="btn bg-gradient-success">&nbsp;Cập nhật bài viết</button>
                                </div>
                                <div class="col-md-6 d-flex justify-content-end">
                                    <button id="btnPreView" onclick="previewDataUpdate()" type="button" class="btn bg-gradient-success">&nbsp;Xem mẫu thử</button>
                                </div>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
